{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "*.ts",
    "tests/**/*.ts",
    "fixtures/**/*.ts",
    "pages/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test-results"
  ]
}
